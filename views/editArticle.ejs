<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/generalStyles.css" />
  </head>
  <body>
    <header><%-include("partials/header")%></header>
    <main>
      <div id="form-creator" class="container mt-5 w-50 mb-5">
        <div id="first-h2" class="mb-3">
          <h2>Edita tu artículo</h2>
        </div>
        <hr />
        <% for (const articulo of listaDeArticulos) { %>
        <form
          action="/admin/editar/<%=article.id%>"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Título</label>
            <input
              type="text"
              class="form-control"
              id="edited-title"
              name="edited-title"
              aria-describedby="emailHelp"
              value="<%= articulo.title %>"
            />
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Contenido</label>
            <textarea
              class="form-control"
              id="edited-content"
              name="edited-content"
              rows="3"
            >
              <%= articulo.content %></textarea
            >
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Seleccionar una imágen</label>
            <input
              type="file"
              class="form-control"
              id="image"
              name="image"
              value="<%= articulo.image %>"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Autor</label>
            <input
              type="text"
              class="form-control"
              id="edited-author"
              name="edited-author"
              value="<%= articulo.author_name %>"
            />
          </div>
          <button type="submit" class="btn btn-success mb-3">Guardar</button>
          <% } %>
        </form>
        <a href="/admin"> ← Volver</a>
      </div>
    </main>
    <footer><%-include("partials/footer")%></footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
